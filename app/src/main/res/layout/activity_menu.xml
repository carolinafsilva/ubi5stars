<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/m_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="hideMenu"
        android:text="@string/menu"
        app:layout_constraintBottom_toTopOf="@+id/m_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/m_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:onClick="login"
        android:text="@string/Login"
        app:layout_constraintBottom_toTopOf="@+id/m_register"
        app:layout_constraintEnd_toEndOf="@+id/m_menu"
        app:layout_constraintStart_toStartOf="@+id/m_menu"
        app:layout_constraintTop_toBottomOf="@+id/m_menu" />

    <Button
        android:id="@+id/m_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:onClick="register"
        android:text="@string/register"
        app:layout_constraintBottom_toTopOf="@+id/m_map"
        app:layout_constraintEnd_toEndOf="@+id/m_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_login" />

    <Button
        android:id="@+id/m_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:onClick="map"
        android:text="@string/map"
        app:layout_constraintBottom_toTopOf="@+id/m_search"
        app:layout_constraintEnd_toEndOf="@+id/m_register"
        app:layout_constraintStart_toStartOf="@+id/m_login"
        app:layout_constraintTop_toBottomOf="@+id/m_register" />

    <Button
        android:id="@+id/m_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:onClick="search"
        android:text="@string/search"
        app:layout_constraintBottom_toTopOf="@+id/m_trail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/m_map"
        app:layout_constraintTop_toBottomOf="@+id/m_map" />

    <Button
        android:id="@+id/m_trail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:onClick="trail"
        android:text="@string/trails"
        app:layout_constraintBottom_toTopOf="@+id/m_settings"
        app:layout_constraintEnd_toEndOf="@+id/m_search"
        app:layout_constraintStart_toStartOf="@+id/m_map"
        app:layout_constraintTop_toBottomOf="@+id/m_search" />

    <Button
        android:id="@+id/m_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/round_button"
        android:onClick="settings"
        android:text="@string/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/m_trail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_trail" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/peak2" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>