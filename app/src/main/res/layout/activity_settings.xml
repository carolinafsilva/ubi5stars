<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Settings">

    <TextView
        android:id="@+id/s_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/s_def1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Definição 1"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/s_title" />

    <Button
        android:id="@+id/s_btn1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sample Text"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/s_def1"
        app:layout_constraintTop_toBottomOf="@id/s_title" />

    <TextView
        android:id="@+id/s_def2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Definição 2"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/s_def1" />

    <Button
        android:id="@+id/s_btn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sample Text"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@id/s_def2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/s_btn1" />

    <TextView
        android:id="@+id/s_def3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Definição 3"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/s_def2" />

    <Button
        android:id="@+id/s_btn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Sample Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/s_def3"
        app:layout_constraintTop_toBottomOf="@id/s_btn2" />

</androidx.constraintlayout.widget.ConstraintLayout>